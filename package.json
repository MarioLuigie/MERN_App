{
  "name": "mern_app",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "cd server && npm run start",
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "client": "cd client && npm run dev",
    "server": "cd server && npm run dev",
    "build": "cd client && npm run build"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^6.2.1"
  }
}
